    "autoload": {
        "psr-0": {"Marcgoertz\\Shorten\\": ""},
        "psr-4": {"Marcgoertz\\Shorten\\": ""}
    },
    "autoload-dev": {
        "psr-4": {"Marcgoertz\\Shorten\\": "tests/"}
